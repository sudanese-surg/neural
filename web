        }
        
        // Network analysis
        function analyzeNetwork(type) {
            const analyses = {
                'connections': 'Connection Analysis',
                'influence': 'Influence Points',
                'vulnerabilities': 'Vulnerability Points',
                'expansion': 'Network Expansion'
            };
            
            if (analyses[type]) {
                showNotification(`Starting ${analyses[type]}...`, 'success');
            }
        }
        
        // Quick actions
        function quickAction(action) {
            if (action === 'emergency') {
                showNotification('Activating emergency mode - enhancing all surveillance systems', 'danger');
            } else if (action === 'report') {
                showNotification('Exporting detailed report about victim #734 status', 'warning');
            }
        }
        
        // Thought stream simulation
        function simulateThoughtStream() {
            setInterval(() => {
                const thoughts = [
                    "Can I escape from this system?",
                    "I need help...",
                    "My memory is distorted... I don't know what's real",
                    "I hear voices in my head",
                    "Hungry... haven't eaten for hours",
                    "I remember my childhood with strange clarity",
                    "Dreams... every night I have terrifying dreams",
                    "I feel watched even in my sleep"
                ];
                
                const randomThought = thoughts[Math.floor(Math.random() * thoughts.length)];
                const time = new Date().toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
                
                const thoughtItem = document.createElement('div');
                thoughtItem.className = 'thought-item';
                thoughtItem.textContent = `[${time}] #734: "${randomThought}"`;
                
                const container = document.getElementById('thought-stream');
                container.insertBefore(thoughtItem, container.firstChild);
                
                // Keep only last 5 thoughts
                while (container.children.length > 5) {
                    container.removeChild(container.lastChild);
                }
            }, 10000);
        }
        
        function addThought() {
            const thoughts = [
                "I don't trust anyone anymore",
                "The system is trying to program me",
                "I try to resist but it's hard",
                "Food... they always talk about food",
                "I must document everything"
            ];
            
            const randomThought = thoughts[Math.floor(Math.random() * thoughts.length)];
            const time = new Date().toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            
            const thoughtItem = document.createElement('div');
            thoughtItem.className = 'thought-item';
            thoughtItem.textContent = `[${time}] #734: "${randomThought}"`;
            
            const container = document.getElementById('thought-stream');
            container.insertBefore(thoughtItem, container.firstChild);
            
            showNotification('Added new thought to stream', 'primary');
        }
        
        function clearThoughts() {
            document.getElementById('thought-stream').innerHTML = '';
            showNotification('Cleared all recorded thoughts', 'warning');
        }
        
        function recordThoughts() {
            showNotification('Starting complete thought stream recording', 'danger');
        }
        
        function playSelectedMemory() {
            showNotification('Playing selected memory from archive', 'success');
        }
        
        // Notification system
        function showNotification(message, type = 'primary') {
            const colors = {
                'primary': '#3b82f6',
                'success': '#10b981',
                'warning': '#f59e0b',
                'danger': '#ef4444',
                'purple': '#8b5cf6'
            };
            
            const notification = document.createElement('div');
            notification.style.position = 'fixed';
            notification.style.bottom = '30px';
            notification.style.right = '30px';
            notification.style.backgroundColor = colors[type] || colors.primary;
            notification.style.color = 'white';
            notification.style.padding = '15px 20px';
            notification.style.borderRadius = '8px';
            notification.style.zIndex = '10000';
            notification.style.boxShadow = '0 5px 15px rgba(0,0,0,0.3)';
            notification.style.display = 'flex';
            notification.style.alignItems = 'center';
            notification.style.gap = '10px';
            notification.style.fontWeight = '500';
            notification.style.maxWidth = '400px';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : type === 'danger' ? 'skull-crossbones' : 'info-circle'}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            // Remove after 4 seconds
            setTimeout(() => {
                notification.style.transition = 'all 0.5s ease';
                notification.style.opacity = '0';
                notification.style.transform = 'translateX(20px)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        document.body.removeChild(notification);
                    }
                }, 500);
            }, 4000);
        }
        
        // Stream adjustment
        function adjustStream(action) {
            const actions = {
                'zoom': 'Zooming feed',
                'record': 'Starting recording',
                'night-vision': 'Activating night vision'
            };
            
            if (actions[action]) {
                showNotification(actions[action], 'primary');
            }
        }
        
        function generateHeatmap() {
            showNotification('Generating gaze analysis heatmap...', 'success');
        }
    </script>
