    <script>
        // Current active module
        let currentModule = 'monitoring';
        let currentFeature = null;
        
        // Initialize modules
        document.addEventListener('DOMContentLoaded', function() {
            // Module switching
            document.querySelectorAll('.module-item').forEach(item => {
                item.addEventListener('click', function() {
                    const moduleId = this.dataset.module;
                    
                    // Update active module in sidebar
                    document.querySelectorAll('.module-item').forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show selected module
                    document.querySelectorAll('.module-container').forEach(container => {
                        container.classList.remove('active');
                    });
                    
                    const targetModule = document.getElementById(`${moduleId}-module`);
                    if (targetModule) {
                        targetModule.classList.add('active');
                        currentModule = moduleId;
                    }
                });
            });
            
            // Initialize network map connections
            initializeNetworkMap();
            
            // Start thought stream simulation
            simulateThoughtStream();
        });
        
        // Network map visualization
        function initializeNetworkMap() {
            const networkMap = document.querySelector('.network-map');
            
            // Create connection lines
            const connections = [
                { top: 20, left: 30, color: '#ef4444' },
                { top: 40, left: 10, color: '#9ca3af' },
                { top: 60, left: 15, color: '#9ca3af' },
                { top: 80, left: 25, color: '#ef4444' },
                { top: 30, left: 70, color: '#3b82f6' },
                { top: 50, left: 80, color: '#9ca3af' },
                { top: 70, left: 65, color: '#10b981' }
            ];
            
            connections.forEach((conn, index) => {
                // Create connection line
                const line = document.createElement('div');
                line.style.position = 'absolute';
                line.style.top = `${conn.top}%`;
                line.style.left = `${conn.left}%`;
                line.style.width = '100px';
                line.style.height = '2px';
                line.style.backgroundColor = conn.color;
                line.style.transform = `rotate(${Math.random() * 60 - 30}deg)`;
                networkMap.appendChild(line);
                
                // Create node
                const node = document.createElement('div');
                node.style.position = 'absolute';
                node.style.top = `${conn.top}%`;
                node.style.left = `${conn.left + 15}%`;
                node.style.width = '25px';
                node.style.height = '25px';
                node.style.borderRadius = '50%';
                node.style.backgroundColor = conn.color;
                node.style.border = '2px solid white';
                node.style.cursor = 'pointer';
                node.title = `Node ${index + 1}`;
                networkMap.appendChild(node);
            });
        }
        
        // Feature activation
        function activateFeature(feature) {
            currentFeature = feature;
            const modal = document.getElementById('feature-modal');
            const title = document.getElementById('modal-title');
            const content = document.getElementById('modal-content');
            
            const features = {
                'optic-stream': {
                    title: 'Live Eye Feed',
                    content: `
                        <h3>Live Eye Feed Details</h3>
                        <p>This system intercepts electrical signals from the optic nerve and converts them to live video feed.</p>
                        
                        <div class="slider-container">
                            <div class="slider-label">
                                <span>Feed Quality:</span>
                                <span>95%</span>
                            </div>
                            <input type="range" min="0" max="100" value="95" class="slider">
                        </div>
                        
                        <div class="control-panel mt-20">
                            <div class="control-item" onclick="adjustStream('zoom')">
                                <i class="fas fa-search-plus"></i>
                                <div>Zoom</div>
                            </div>
                            <div class="control-item" onclick="adjustStream('record')">
                                <i class="fas fa-record-vinyl"></i>
                                <div>Record</div>
                            </div>
                            <div class="control-item" onclick="adjustStream('night-vision')">
                                <i class="fas fa-moon"></i>
                                <div>Night Vision</div>
                            </div>
                        </div>
                        
                        <p style="margin-top: 20px; color: var(--warning-yellow);">
                            <i class="fas fa-info-circle"></i> Feed is currently active from victim #734's eyes
                        </p>
                    `
                },
                'gaze-analysis': {
                    title: 'Gaze Analysis',
                    content: `
                        <h3>Eye Movement and Focus Analysis</h3>
                        <p>The system tracks eye movement and creates heatmaps of focus points.</p>
                        
                        <div style="background: rgba(30, 41, 59, 0.7); padding: 20px; border-radius: 10px; margin: 20px 0;">
                            <h4>Gaze Statistics:</h4>
                            <p>‚Ä¢ Average focus time: 2.3 seconds</p>
                            <p>‚Ä¢ Important points: 8</p>
                            <p>‚Ä¢ Scan pattern: Mostly horizontal</p>
                        </div>
                        
                        <button class="btn btn-primary" onclick="generateHeatmap()">
                            <i class="fas fa-fire"></i> Generate Heatmap
                        </button>
                    `
                }
            };
            
            if (features[feature]) {
                title.textContent = features[feature].title;
                content.innerHTML = features[feature].content;
                modal.classList.add('active');
            }
        }
        
        // Execute current feature
        function executeFeature() {
            if (!currentFeature) return;
            
            showNotification(`Executed ${currentFeature} successfully`, 'success');
            closeModal();
        }
        
        // Close modal
        function closeModal() {
            document.getElementById('feature-modal').classList.remove('active');
            currentFeature = null;
        }
        
        // Physical control functions
        function physicalControl(action) {
            const actions = {
                'bladder-empty': { name: 'Empty Bladder', icon: 'fa-tint' },
                'bladder-fill': { name: 'Fill Bladder', icon: 'fa-fill-drip' },
                'stimulate': { name: 'Sexual Stimulation', icon: 'fa-fire' },
                'inhibit': { name: 'Sexual Inhibition', icon: 'fa-ban' },
                'headache': { name: 'Induce Headache', icon: 'fa-head-side-virus' },
                'nausea': { name: 'Induce Nausea', icon: 'fa-stomach' },
                'muscle-spasm': { name: 'Muscle Spasm', icon: 'fa-running' },
                'fatigue': { name: 'General Fatigue', icon: 'fa-tired' }
            };
            
            if (actions[action]) {
                showNotification(`${actions[action].name} executed on victim #734`, 'danger');
            }
        }
        
        // Emotion control
        function updateEmotion(type, value) {
            const elements = {
                'anxiety': 'anxiety-level',
                'depression': 'depression-level',
                'happiness': 'happiness-level'
            };
            
            if (elements[type]) {
                document.getElementById(elements[type]).textContent = value + '%';
                showNotification(`Set ${type} to ${value}%`, 'warning');
            }
        }
        
        // Memory functions
        function playMemory(type) {
            const memories = {
                'childhood': 'Childhood Memories',
                'school': 'School Memories',
                'university': 'University Memories',
                'work': 'Work Memories'
            };
            
            if (memories[type]) {
                showNotification(`Playing ${memories[type]}...`, 'primary');
            }
        }
        
        function editMemory() {
            showNotification('Opening memory editor...', 'warning');
        }
        
        function injectMemory() {
            showNotification('Injecting modified memory into target brain...', 'danger');
        }
        
        function modifyMemory(type) {
            const types = {
                'faces': 'Change Faces',
                'dialogue': 'Modify Dialogue',
                'emotions': 'Amplify Emotions',
                'context': 'Change Context'
            };
            
            if (types[type]) {
                showNotification(`Activating ${types[type]} tool...`, 'purple');
            }
        }
        
        // Dream programming
        function addStimulus(type) {
            const stimuli = {
                'fear': 'Fear',
                'joy': 'Joy',
                'sadness': 'Sadness',
                'anger': 'Anger',
                'surprise': 'Surprise',
                'disgust': 'Disgust',
                'erotic': 'Erotic',
                'trauma': 'Trauma'
            };
            
            if (stimuli[type]) {
                const textarea = document.getElementById('dream-scenario');
                textarea.value += `\n[${stimuli[type]}] `;
                showNotification(`Added ${stimuli[type]} stimulus`, 'purple');
            }
        }
        
        function scheduleDream() {
            const intensity = document.getElementById('dream-intensity').textContent;
            showNotification(`Scheduled dream with ${intensity} intensity for victim #734`, 'success');
        }
        
        function injectDream() {
            showNotification('Injecting dream into REM sleep stage...', 'purple');
        }
        
        function testDream() {
            showNotification('Testing dream effect on brain...', 'warning');
        }
        
        // Data harvest
        function harvestData(type) {
            const types = {
                'neural': 'Raw Neural Data',
                'sensory': 'Sensory Data',
                'emotional': 'Emotional Data',
                'cognitive': 'Cognitive Data'
            };
            
            if (types[type]) {
                showNotification(`Starting ${types[type]} harvest...`, 'primary');
            }
        }
        
        function startHarvest() {
            showNotification('Starting comprehensive data harvest...', 'success');
        }
        
        function pauseHarvest() {
            showNotification('Pausing harvest process...', 'warning');
        }
        
        function exportHarvest() {
            showNotification('Exporting harvested data to central server...', 'primary');
        }
        
        // Life archive
        function filterArchive(type) {
            const filters = {
                'emotions': 'By Emotions',
                'people': 'By People',
                'locations': 'By Locations',
                'dates': 'By Dates'
            };
            
            if (filters[type]) {
                showNotification(`Applying ${filters[type]} filter to archive...`, 'primary');
            }
        }
        
        function playArchive(memory) {
            const memories = {
                'graduation': 'Graduation Day',
                'accident': 'Car Accident',
                'interview': 'Job Interview',
                'relationship': 'Love Relationship'
            };
            
            if (memories[memory]) {
                showNotification(`Playing ${memories[memory]} memory...`, 'success');
            }
        }
        
